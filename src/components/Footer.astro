---
import { getTranslations, getLocalizedPath, type Language } from '../i18n';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);

// Localized footer labels
const footerLabels = {
  legal: { es: 'Aviso Legal', en: 'Legal Notice', ca: 'Avís Legal' },
  faq: { es: 'FAQ y Contacto', en: 'FAQ & Contact', ca: 'FAQ i Contacte' },
  join: { es: 'Únete a Nosotros', en: 'Join Us', ca: 'Uneix-te a Nosaltres' },
  news: { es: 'Noticias y Momentos', en: 'News & Moments', ca: 'Notícies i Moments' },
  newsletter: { 
    es: 'La Newsletter\nNoticias, recetas y todo eso', 
    en: 'Our Newsletter\nNews, recipes & everything rabbit', 
    ca: 'La Newsletter\nNotícies, receptes i tot això' 
  },
  placeholder: { es: 'Tu Correo Electrónico', en: 'Your Email', ca: 'El Teu Correu Electrònic' },
  submit: { es: '¡Vamos!', en: 'Go!', ca: 'Anem!' },
  privacy: { 
    es: 'Acepto la Política de Privacidad', 
    en: 'I accept the Privacy Policy', 
    ca: 'Accepto la Política de Privacitat' 
  },
  stayInTouch: { es: 'Síguenos', en: 'Stay in touch', ca: 'Segueix-nos' }
};
---

<!-- Newsletter Section (before footer, white bg) -->
<section class="py-16 md:py-24 bg-white">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Top divider - RED -->
    <div class="border-t border-[#CD202C] mb-12"></div>
    
    <!-- Left aligned newsletter text -->
    <p class="font-typewriter text-2xl md:text-3xl leading-relaxed mb-10 whitespace-pre-line">
      {footerLabels.newsletter[lang]}
    </p>
    
    <!-- Box-style email input -->
    <form class="max-w-md mb-6">
      <div class="flex items-center border border-[#1A1A1A] rounded-lg px-4 py-3 gap-4">
        <input 
          type="email" 
          placeholder={footerLabels.placeholder[lang]}
          class="flex-1 bg-transparent font-mono text-base placeholder:text-black/40 focus:outline-none"
        />
        <button 
          type="submit"
          class="font-typewriter text-base text-red hover:text-red/70 transition-colors whitespace-nowrap"
        >
          {footerLabels.submit[lang]}
        </button>
      </div>
      
      <!-- Privacy checkbox -->
      <label class="flex items-center gap-2 mt-4 font-mono text-xs text-black/60 cursor-pointer">
        <input type="checkbox" class="rounded border-[#1A1A1A]/30" required />
        <span>{footerLabels.privacy[lang].split('Política')[0]}<a href="/privacidad" class="underline hover:text-red transition-colors">Política de Privacidad</a></span>
      </label>
    </form>
    
  </div>
</section>

<!-- Footer (white bg, Big Mamma style) -->
<footer class="bg-white text-black">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
    
    <!-- Top divider - RED -->
    <div class="border-t border-[#CD202C] mb-10"></div>
    
    <!-- Footer Menu Links - LEFT ALIGNED, Title Case -->
    <nav class="flex flex-col items-start gap-2 mb-8 font-typewriter text-base tracking-normal">
      <a href="/legal" class="text-black hover:text-red transition-colors">
        {footerLabels.legal[lang]}
      </a>
      <a href={getLocalizedPath('/contacto', lang)} class="text-black hover:text-red transition-colors">
        {footerLabels.faq[lang]}
      </a>
      <a href="mailto:hola@dirtyrabbit.es?subject=Work%20with%20us" class="text-black hover:text-black/70 transition-colors">
        {footerLabels.join[lang]}
      </a>
      <a href={getLocalizedPath('/news', lang)} class="text-black hover:text-red transition-colors">
        {footerLabels.news[lang]}
      </a>
    </nav>
    
    <!-- Encuéntranos -->
    <div class="mb-8">
      <h3 class="font-typewriter text-sm text-red mb-3">Encuéntranos</h3>
      <p class="font-typewriter text-base text-black mb-1">Horario</p>
      <p class="font-mono text-base text-black mb-4">Mar-Dom de 8:00 a 15:00</p>
      <p class="font-typewriter text-base text-black mb-1">Dirección</p>
      <p class="font-mono text-base text-black mb-2">Avenida Playa de Aro, 275<br />S'Agaró, Girona</p>
      <a 
        href="https://maps.app.goo.gl/dirtyrabbit" 
        target="_blank" 
        rel="noopener noreferrer"
        class="font-mono text-base text-black hover:text-red transition-colors"
      >
        Ven a Google Maps
      </a>
    </div>
    
    <!-- NO divider between links and Stay in touch -->
    
    <!-- Stay in touch + social - LEFT ALIGNED -->
    <div class="mb-8">
      <p class="font-typewriter text-lg mb-4">{footerLabels.stayInTouch[lang]}</p>
      
      <!-- Social icons WITHOUT circles (like menu) -->
      <div class="flex items-center gap-6">
        <!-- Instagram -->
        <a 
          href="https://instagram.com/dirtyrabbitsagaro" 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-black/70 hover:text-red transition-colors"
          aria-label="Instagram"
