---
import LanguageSelector from './LanguageSelector.astro';
import { getTranslations, getLocalizedPath, type Language } from '../i18n';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);

const historyLabels: Record<Language, string> = {
  es: 'Nuestra Manera',
  en: 'Our Way',
  ca: 'La Nostra Manera'
};

const suppliersLabels: Record<Language, string> = {
  es: 'Nuestros Proveedores',
  en: 'Our Producers',
  ca: 'Els Nostres Proveïdors'
};

const workLabels: Record<Language, string> = {
  es: 'Únete a Nosotros',
  en: 'Join Us',
  ca: 'Uneix-te a Nosaltres'
};

const contactLabels: Record<Language, string> = {
  es: 'FAQ y Contacto',
  en: 'FAQ & Contact',
  ca: 'FAQ i Contacte'
};

const orderLabels: Record<Language, string> = {
  es: 'Pide Ahora',
  en: 'Order Now',
  ca: 'Demana Ara'
};
---

<header id="main-header" class="fixed top-0 left-0 right-0 z-50 header-transparent header-transition border-b">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 md:h-20">
      
      <!-- Secondary Nav (left) - small text -->
      <nav class="hidden md:flex items-center gap-6">
        <a 
          href={getLocalizedPath('/about', lang)} 
          class="nav-link font-mono text-xs uppercase tracking-wider transition-colors"
        >
          {t.nav.about}
        </a>
        <a 
          href={getLocalizedPath('/proveedores', lang)} 
          class="nav-link font-mono text-xs uppercase tracking-wider transition-colors"
        >
          {t.nav.producers}
        </a>
        <a 
          href={getLocalizedPath('/contacto', lang)} 
          class="nav-link font-mono text-xs uppercase tracking-wider transition-colors"
        >
          {t.nav.contact}
        </a>
      </nav>
      
      <!-- Mobile Menu Button (left on mobile) -->
      <button 
        id="mobile-menu-btn"
        class="menu-btn md:hidden p-2 -ml-2 hover:opacity-80 rounded-lg transition-opacity"
        aria-label="Abrir menú"
        aria-expanded="false"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>

      <!-- Centered Logo -->
      <a 
        href={getLocalizedPath('/', lang)} 
        class="absolute left-1/2 -translate-x-1/2 flex items-center hover:opacity-80 transition-opacity"
      >
        <img 
          src="/logos/LOGO-HORIZONTAL-ROJO-DIRTYRABBIT.png" 
          alt="Dirty Rabbit" 
          class="logo-dark h-6 md:h-8 w-auto"
        />
        <img 
          src="/logos/LOGO-HORIZONTAL-CREMA-DIRTYRABBIT.png" 
          alt="Dirty Rabbit" 
          class="logo-light h-6 md:h-8 w-auto hidden"
        />
      </a>
      
      <!-- Primary Nav (right) - desktop -->
      <nav class="hidden md:flex items-center gap-6">
        <a 
          href={getLocalizedPath('/menu', lang)} 
          class="nav-link font-typewriter text-lg md:text-xl tracking-normal transition-colors font-bold"
        >
          Carta
        </a>
        <a 
          href="https://order.dirtyrabbit.es" 
          target="_blank"
          rel="noopener noreferrer"
          class="nav-cta font-typewriter text-lg md:text-xl tracking-normal px-6 py-3 transition-colors font-bold"
        >
          {t.nav.order}
        </a>
        <LanguageSelector lang={lang} />
      </nav>
      
      <!-- Mobile: Right side placeholder for balance -->
      <div class="md:hidden w-10"></div>
    </div>
  </div>
</header>

<!-- Full-screen Mobile Menu Overlay (Big Mamma style) -->
<div 
  id="mobile-menu-overlay" 
  class="mobile-menu-overlay hidden fixed inset-0 z-[100] bg-white flex flex-col"
>
  <!-- Overlay Header: X (left), Logo (center), Lang (right) -->
  <div class="flex items-center justify-between px-4 h-16 border-b border-[#1A1A1A]/10">
    <!-- Close button (LEFT) -->
    <button 
      id="mobile-menu-close"
      class="p-2 -ml-2 hover:bg-black/5 rounded-lg transition-colors"
      aria-label="Cerrar menú"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
    
    <!-- Logo (CENTER) -->
    <img 
      src="/logos/LOGO-HORIZONTAL-ROJO-DIRTYRABBIT.png" 
      alt="Dirty Rabbit" 
      class="h-6 w-auto absolute left-1/2 -translate-x-1/2"
    />
    
    <!-- Language selector (RIGHT) -->
    <LanguageSelector lang={lang} />
  </div>
  
  <!-- Overlay Content -->
  <div class="flex-1 flex flex-col justify-center px-8">
    
    <!-- Mascot illustration - BIGGER -->
    <div class="mb-8">
      <img 
        src="/logos/SIMBOLO-ROJO-DIRTYRABBIT.png" 
        alt="" 
        class="h-32 w-auto"
        aria-hidden="true"
      />
    </div>
    
    <!-- Primary Links - consistent spacing -->
    <nav class="space-y-2 mb-4">
      <a 
        href={getLocalizedPath('/menu', lang)} 
        class="block font-typewriter text-4xl tracking-normal text-red hover:text-red/80 transition-colors"
      >
        Carta
      </a>
      <a 
        href={getLocalizedPath('/about', lang)} 
        class="block font-typewriter text-4xl tracking-normal text-red hover:text-red/80 transition-colors"
      >
        {historyLabels[lang]}
      </a>
      <a 
        href="https://order.dirtyrabbit.es" 
        target="_blank"
        rel="noopener noreferrer"
        class="block font-typewriter text-4xl tracking-normal text-red hover:text-red/80 transition-colors"
      >
        {orderLabels[lang]}
      </a>
    </nav>
    
    <!-- Solid divider line - RED -->
    <div class="w-full max-w-xs border-t border-[#CD202C] mb-10"></div>
    
    <!-- Secondary Links (small) - Left aligned, RED -->
    <nav class="space-y-3">
      <a 
        href={getLocalizedPath('/proveedores', lang)} 
        class="block font-mono text-base text-red hover:text-red/80 transition-colors"
      >
        {suppliersLabels[lang]}
      </a>
      <a 
        href={getLocalizedPath('/contacto', lang)} 
        class="block font-mono text-base text-red hover:text-red/80 transition-colors"
      >
        {workLabels[lang]}
      </a>
      <a 
        href={getLocalizedPath('/contacto', lang)} 
        class="block font-mono text-base text-red hover:text-red/80 transition-colors"
      >
        {contactLabels[lang]}
      </a>
    </nav>
  </div>
  
  <!-- Overlay Footer: Stay in touch + social icons (no top border) -->
  <div class="px-8 py-8">
    <p class="font-mono text-sm text-red mb-4">Stay in touch</p>
    <div class="flex items-center gap-6">
      <!-- Instagram -->
      <a 
        href="https://instagram.com/dirtyrabbitsagaro" 
        target="_blank" 
        rel="noopener noreferrer"
        class="text-black hover:text-red transition-colors"
        aria-label="Instagram"
      >
