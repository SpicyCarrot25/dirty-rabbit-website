---
import LanguageSelector from './LanguageSelector.astro';
import { getTranslations, getLocalizedPath, type Language } from '../i18n';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);
---

<header class="fixed top-0 left-0 right-0 z-50 bg-cream/95 backdrop-blur-sm border-b border-black/10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href={getLocalizedPath('/', lang)} class="flex items-center gap-2 hover:opacity-80 transition-opacity">
        <svg class="w-8 h-8 md:w-10 md:h-10" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
          <!-- Rabbit ears icon -->
          <path d="M12 8C12 4 14 2 16 2C18 2 19 4 19 6C19 8 18 12 18 14" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          <path d="M28 8C28 4 26 2 24 2C22 2 21 4 21 6C21 8 22 12 22 14" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          <circle cx="20" cy="24" r="10" stroke="currentColor" stroke-width="2"/>
          <circle cx="16" cy="22" r="1.5" fill="currentColor"/>
          <circle cx="24" cy="22" r="1.5" fill="currentColor"/>
          <ellipse cx="20" cy="26" rx="2" ry="1.5" fill="currentColor"/>
        </svg>
        <span class="font-typewriter text-lg md:text-xl font-bold tracking-tight">DIRTY RABBIT</span>
      </a>
      
      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-8">
        <!-- Primary Nav -->
        <div class="flex items-center gap-6">
          <a href={getLocalizedPath('/menu', lang)} class="font-typewriter text-sm tracking-wide hover:text-red transition-colors">
            {t.nav.menu}
          </a>
          <a href={getLocalizedPath('/about', lang)} class="font-typewriter text-sm tracking-wide hover:text-red transition-colors">
            {t.nav.about}
          </a>
          <a 
            href="https://order.dirtyrabbit.es" 
            target="_blank"
            rel="noopener noreferrer"
            class="font-typewriter text-sm tracking-wide bg-red text-white px-4 py-2 hover:bg-red/90 transition-colors"
          >
            {t.nav.order}
          </a>
        </div>
        
        <!-- Secondary Nav -->
        <div class="flex items-center gap-4 text-xs border-l border-black/20 pl-6">
          <a href={getLocalizedPath('/proveedores', lang)} class="font-mono hover:text-red transition-colors">
            {t.nav.producers}
          </a>
          <a href={getLocalizedPath('/news', lang)} class="font-mono hover:text-red transition-colors">
            {t.nav.news}
          </a>
          <a href={getLocalizedPath('/contacto', lang)} class="font-mono hover:text-red transition-colors">
            {t.nav.contact}
          </a>
        </div>
        
        <!-- Social + Language -->
        <div class="flex items-center gap-3 border-l border-black/20 pl-6">
          <a href="https://instagram.com/dirtyrabbitbcn" target="_blank" rel="noopener noreferrer" class="hover:text-red transition-colors" aria-label="Instagram">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
          <a href="https://open.spotify.com" target="_blank" rel="noopener noreferrer" class="hover:text-red transition-colors" aria-label="Spotify">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
            </svg>
          </a>
          <LanguageSelector lang={lang} />
        </div>
      </nav>
      
      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-btn"
        class="md:hidden p-2 hover:bg-black/5 rounded-lg transition-colors"
        aria-label="Open menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-cream border-t border-black/10">
    <div class="px-4 py-6 space-y-4">
      <a href={getLocalizedPath('/menu', lang)} class="block font-typewriter text-lg hover:text-red transition-colors">
        {t.nav.menu}
      </a>
      <a href={getLocalizedPath('/about', lang)} class="block font-typewriter text-lg hover:text-red transition-colors">
        {t.nav.about}
      </a>
      <a href={getLocalizedPath('/proveedores', lang)} class="block font-mono text-sm hover:text-red transition-colors">
        {t.nav.producers}
      </a>
      <a href={getLocalizedPath('/news', lang)} class="block font-mono text-sm hover:text-red transition-colors">
        {t.nav.news}
      </a>
      <a href={getLocalizedPath('/contacto', lang)} class="block font-mono text-sm hover:text-red transition-colors">
        {t.nav.contact}
      </a>
      <div class="pt-4 border-t border-black/10">
        <a 
          href="https://order.dirtyrabbit.es" 
          target="_blank"
          rel="noopener noreferrer"
          class="block w-full text-center font-typewriter bg-red text-white px-4 py-3 hover:bg-red/90 transition-colors"
        >
          {t.nav.order}
        </a>
      </div>
      <div class="flex items-center justify-between pt-4 border-t border-black/10">
        <div class="flex gap-4">
          <a href="https://instagram.com/dirtyrabbitbcn" target="_blank" rel="noopener noreferrer" class="hover:text-red transition-colors">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
          <a href="https://open.spotify.com" target="_blank" rel="noopener noreferrer" class="hover:text-red transition-colors">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
            </svg>
          </a>
        </div>
        <LanguageSelector lang={lang} />
      </div>
    </div>
  </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-16 md:h-20"></div>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
