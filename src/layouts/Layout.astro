---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getLangFromUrl, getTranslations, getAlternateUrls, type Language } from '../i18n';

interface BreadcrumbItem {
  name: string;
  url: string;
}

interface Props {
  title: string;
  description?: string;
  lang?: Language;
  breadcrumbs?: BreadcrumbItem[];
  isMenuPage?: boolean;
}

const { 
  title, 
  description = 'Specialty Coffee, Breakfast & Brunch en S\'Agaró, Costa Brava', 
  lang,
  breadcrumbs,
  isMenuPage = false
} = Astro.props;

const currentLang = lang || getLangFromUrl(Astro.url);
const t = getTranslations(currentLang);
const alternates = getAlternateUrls(Astro.url.pathname, 'https://dirtyrabbit.es');

// Enhanced LocalBusiness Schema
const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "CafeOrCoffeeShop",
  "name": "Dirty Rabbit",
  "image": "https://dirtyrabbit.es/og-image.jpg",
  "url": "https://dirtyrabbit.es",
  "telephone": "+34 872 454 264",
  "email": "hola@dirtyrabbit.es",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Carrer de la Conca 17",
    "addressLocality": "S'Agaró",
    "addressRegion": "Girona",
    "postalCode": "17248",
    "addressCountry": "ES"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 41.7967591,
    "longitude": 3.0485060
  },
  "hasMenu": "https://dirtyrabbit.es/carta",
  "acceptsReservations": false,
  "paymentAccepted": "Cash, Credit Card",
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
      "opens": "08:00",
      "closes": "15:00"
    },
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": "Monday",
      "opens": "00:00",
      "closes": "00:00"
    }
  ],
  "servesCuisine": ["Specialty Coffee", "Brunch", "Breakfast"],
  "priceRange": "€€",
  "sameAs": [
    "https://instagram.com/dirtyrabbitsagaro"
  ]
};

// WebSite Schema with SearchAction (sitelinks search box)
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Dirty Rabbit",
  "url": "https://dirtyrabbit.es",
  "potentialAction": {
    "@type": "SearchAction",
    "target": {
      "@type": "EntryPoint",
      "urlTemplate": "https://dirtyrabbit.es/?q={search_term_string}"
    },
    "query-input": "required name=search_term_string"
  }
};

// BreadcrumbList Schema (only if breadcrumbs provided)
const breadcrumbSchema = breadcrumbs && breadcrumbs.length > 0 ? {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbs.map((crumb, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": crumb.name,
    "item": crumb.url
  }))
} : null;

// Menu Schema (for carta pages)
const menuSchema = isMenuPage ? {
  "@context": "https://schema.org",
  "@type": "Menu",
  "name": "Dirty Rabbit Menu",
  "url": "https://dirtyrabbit.es/carta",
  "mainEntityOfPage": "https://dirtyrabbit.es/carta",
  "inLanguage": currentLang,
  "hasMenuSection": [
    {
      "@type": "MenuSection",
      "name": "Café & Cia",
      "description": "Specialty coffee roasted by La Cabra, Copenhagen"
    },
    {
      "@type": "MenuSection",
      "name": "Bebidas",
      "description": "Smoothies, soft drinks, and adult beverages"
    },
    {
      "@type": "MenuSection",
      "name": "Comida",
      "description": "Toasts, bagels, and bowls"
    }
  ]
} : null;
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    
    <link rel="canonical" href={Astro.url.href} />
    
    <link rel="alternate" hreflang="es" href={alternates.es} />
    <link rel="alternate" hreflang="en" href={alternates.en} />
    <link rel="alternate" hreflang="ca" href={alternates.ca} />
    <link rel="alternate" hreflang="fr" href={alternates.fr} />
    <link rel="alternate" hreflang="ru" href={alternates.ru} />
    <link rel="alternate" hreflang="uk" href={alternates.uk} />
    <link rel="alternate" hreflang="pl" href={alternates.pl} />
    <link rel="alternate" hreflang="x-default" href={alternates.es} />
    
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:image" content="https://dirtyrabbit.es/og-image.jpg" />
    <meta property="og:locale" content={currentLang === 'es' ? 'es_ES' : currentLang === 'ca' ? 'ca_ES' : 'en_US'} />
    
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    
    <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
    {breadcrumbSchema && <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />}
    {menuSchema && <script type="application/ld+json" set:html={JSON.stringify(menuSchema)} />}
    
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-white text-black">
    <Header lang={currentLang} />
    <main class="flex-1">
      <slot />
    </main>
    <Footer lang={currentLang} />
  </body>
</html>
