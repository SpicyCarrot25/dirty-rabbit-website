---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getLangFromUrl, getTranslations, getAlternateUrls, type Language } from '../i18n';

interface BreadcrumbItem {
  name: string;
  url: string;
}

interface Props {
  title: string;
  description?: string;
  lang?: Language;
  breadcrumbs?: BreadcrumbItem[];
  isMenuPage?: boolean;
}

const { 
  title, 
  description = 'Specialty Coffee, Breakfast & Brunch en S\'Agaró, Costa Brava', 
  lang,
  breadcrumbs,
  isMenuPage = false
} = Astro.props;

const currentLang = lang || getLangFromUrl(Astro.url);
const t = getTranslations(currentLang);
const alternates = getAlternateUrls(Astro.url.pathname, 'https://dirtyrabbit.es');

// Build @graph array with all schema objects
const graphItems: Record<string, unknown>[] = [
  // CafeOrCoffeeShop (LocalBusiness)
  {
    "@type": "CafeOrCoffeeShop",
    "@id": "https://dirtyrabbit.es/#business",
    "name": "Dirty Rabbit",
    "image": "https://dirtyrabbit.es/og-image.jpg",
    "url": "https://dirtyrabbit.es",
    "telephone": "+34 872 454 264",
    "email": "hola@dirtyrabbit.es",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Carrer de la Conca 17",
      "addressLocality": "S'Agaró",
      "addressRegion": "Girona",
      "postalCode": "17248",
      "addressCountry": "ES"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": 41.7967591,
      "longitude": 3.0485060
    },
    "hasMenu": "https://dirtyrabbit.es/carta",
    "acceptsReservations": false,
    "paymentAccepted": "Cash, Credit Card",
    "openingHoursSpecification": [
      {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": ["Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
        "opens": "08:00",
        "closes": "15:00"
      },
      {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": "Monday",
        "opens": "00:00",
        "closes": "00:00"
      }
    ],
    "servesCuisine": ["Specialty Coffee", "Brunch", "Breakfast"],
    "priceRange": "€€",
    "sameAs": [
      "https://instagram.com/dirtyrabbitsagaro"
    ]
  },
  // WebSite with SearchAction
  {
    "@type": "WebSite",
    "@id": "https://dirtyrabbit.es/#website",
    "name": "Dirty Rabbit",
    "url": "https://dirtyrabbit.es",
    "potentialAction": {
      "@type": "SearchAction",
      "target": {
        "@type": "EntryPoint",
        "urlTemplate": "https://dirtyrabbit.es/?q={search_term_string}"
      },
      "query-input": "required name=search_term_string"
    }
  }
];

// Add BreadcrumbList if provided
if (breadcrumbs && breadcrumbs.length > 0) {
  graphItems.push({
    "@type": "BreadcrumbList",
    "@id": `https://dirtyrabbit.es${Astro.url.pathname}#breadcrumb`,
    "itemListElement": breadcrumbs.map((crumb, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "name": crumb.name,
      "item": crumb.url
    }))
  });
}

// Add Menu schema for carta pages
if (isMenuPage) {
  graphItems.push({
    "@type": "Menu",
    "@id": "https://dirtyrabbit.es/carta#menu",
    "name": "Dirty Rabbit Menu",
    "url": "https://dirtyrabbit.es/carta",
    "mainEntityOfPage": "https://dirtyrabbit.es/carta",
    "inLanguage": currentLang,
    "hasMenuSection": [
      {
        "@type": "MenuSection",
        "name": "Café & Cia",
        "description": "Specialty coffee roasted by La Cabra, Copenhagen"
      },
      {
        "@type": "MenuSection",
        "name": "Bebidas",
        "description": "Smoothies, soft drinks, and adult beverages"
      },
      {
        "@type": "MenuSection",
        "name": "Comida",
        "description": "Toasts, bagels, and bowls"
      }
    ]
  });
}

// Single unified schema with @graph
const unifiedSchema = {
  "@context": "https://schema.org",
  "@graph": graphItems
};
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    
    <!-- Preload critical fonts -->
    <link rel="preload" href="/fonts/NYCTypewriter-Regular.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/NYCTypewriter-Mono.woff2" as="font" type="font/woff2" crossorigin />
    
    <link rel="canonical" href={Astro.url.href} />
    
    <link rel="alternate" hreflang="es" href={alternates.es} />
    <link rel="alternate" hreflang="en" href={alternates.en} />
    <link rel="alternate" hreflang="ca" href={alternates.ca} />
    <link rel="alternate" hreflang="fr" href={alternates.fr} />
    <link rel="alternate" hreflang="ru" href={alternates.ru} />
    <link rel="alternate" hreflang="uk" href={alternates.uk} />
    <link rel="alternate" hreflang="pl" href={alternates.pl} />
    <link rel="alternate" hreflang="x-default" href={alternates.es} />
    
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:image" content="https://dirtyrabbit.es/og-image.jpg" />
    <meta property="og:locale" content={currentLang === 'es' ? 'es_ES' : currentLang === 'ca' ? 'ca_ES' : 'en_US'} />
    
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    
    <script type="application/ld+json" set:html={JSON.stringify(unifiedSchema)} />
    
    <title>{title}</title>
    
    <!-- Google Analytics 4 -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-0RBR92LJQK"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-0RBR92LJQK');
      
      // Custom event tracking
      document.addEventListener('DOMContentLoaded', function() {
        document.addEventListener('click', function(e) {
          var link = e.target.closest('a');
          if (!link) return;
          var href = link.href || '';
          
          // Order button (Square)
          if (href.includes('order.dirtyrabbit.es')) {
            gtag('event', 'click_order', { event_category: 'cta', event_label: href });
          }
          // Google Maps / directions
          else if (href.includes('maps.google') || href.includes('goo.gl/maps')) {
            gtag('event', 'click_directions', { event_category: 'cta', event_label: 'google_maps' });
          }
          // Phone call
          else if (href.startsWith('tel:')) {
            gtag('event', 'click_call', { event_category: 'cta', event_label: href });
          }
          // Instagram
          else if (href.includes('instagram.com')) {
            gtag('event', 'click_social', { event_category: 'social', event_label: 'instagram' });
          }
          // Spotify
          else if (href.includes('spotify.com')) {
            gtag('event', 'click_social', { event_category: 'social', event_label: 'spotify' });
          }
        });
        
        // Newsletter form submit
        var nlForm = document.querySelector('form[action*="newsletter"], form[data-newsletter]');
        if (nlForm) {
          nlForm.addEventListener('submit', function() {
            gtag('event', 'newsletter_signup', { event_category: 'conversion' });
          });
        }
      });
    </script>
  </head>
  <body class="min-h-screen flex flex-col bg-white text-black">
    <Header lang={currentLang} />
    <main class="flex-1">
      <slot />
    </main>
    <Footer lang={currentLang} />
  </body>
</html>
