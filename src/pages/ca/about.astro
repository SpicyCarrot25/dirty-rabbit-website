---
import Layout from '../../layouts/Layout.astro';
import { getTranslations } from '../../i18n';
const lang = 'ca';
const t = getTranslations(lang);
---
<Layout title={`${t.about.title} â€” Dirty Rabbit`} lang={lang}>
  <section class="py-16 md:py-24 bg-cream">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="reveal font-typewriter text-5xl md:text-6xl font-bold mb-12 text-center">{t.about.title}</h1>
      <div class="grid md:grid-cols-2 gap-12 items-center mb-24">
        <div class="reveal"><h2 class="font-typewriter text-3xl font-bold mb-6">{t.about.ourStory}</h2><p class="font-mono text-lg text-black/70 leading-relaxed">[COPY TBD]</p></div>
        <div class="reveal"><div class="w-full aspect-[4/3] bg-black/10 flex items-center justify-center font-mono text-sm text-black/40">[PHOTO TBD]</div></div>
      </div>
      <div class="grid md:grid-cols-2 gap-12 items-center mb-24">
        <div class="reveal order-2 md:order-1"><div class="w-full aspect-[4/3] bg-black/10 flex items-center justify-center font-mono text-sm text-black/40">[PHOTO TBD]</div></div>
        <div class="reveal order-1 md:order-2"><h2 class="font-typewriter text-3xl font-bold mb-6">{t.about.theSpace}</h2><p class="font-mono text-lg text-black/70 leading-relaxed">[COPY TBD]</p></div>
      </div>
      <div class="text-center reveal">
        <h2 class="font-typewriter text-3xl font-bold mb-8">{t.about.whoWeAre}</h2>
        <div class="grid md:grid-cols-2 gap-8 max-w-3xl mx-auto">
          <div class="text-center"><div class="w-48 h-48 mx-auto bg-black/10 rounded-full flex items-center justify-center font-mono text-sm text-black/40 mb-4">[PHOTO TBD]</div><h3 class="font-typewriter text-xl font-bold">[NAME TBD]</h3><p class="font-mono text-sm text-black/60">[ROLE TBD]</p></div>
          <div class="text-center"><div class="w-48 h-48 mx-auto bg-black/10 rounded-full flex items-center justify-center font-mono text-sm text-black/40 mb-4">[PHOTO TBD]</div><h3 class="font-typewriter text-xl font-bold">[NAME TBD]</h3><p class="font-mono text-sm text-black/60">[ROLE TBD]</p></div>
        </div>
      </div>
    </div>
  </section>
</Layout>
