---
import Layout from '../../layouts/Layout.astro';
import { getTranslations } from '../../i18n';

const lang = 'ca';
const t = getTranslations(lang);
---

<Layout title={`${t.historia.title} ‚Äî Dirty Rabbit`} lang={lang}>
  <!-- Hero Section -->
  <section class="pt-8 pb-12 md:pt-12 md:pb-16 bg-cream">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="font-typewriter text-5xl md:text-6xl font-bold text-red mb-6">{t.historia.title}</h1>
      <div class="w-16 h-px bg-red mx-auto mb-8"></div>
      <p class="font-mono text-lg md:text-xl text-black/70 italic">
        {t.historia.tagline}
      </p>
    </div>
  </section>

  <!-- Hero Photo Placeholder -->
  <section class="bg-cream pb-12">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="w-full aspect-[16/9] bg-black/10 flex items-center justify-center font-mono text-sm text-black/40 rounded-lg">
        [FOTO: L'espai / Els fundadors]
      </div>
    </div>
  </section>

  <!-- Story Sections -->
  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- How It Started -->
      <div class="mb-16">
        <h2 class="font-typewriter text-2xl md:text-3xl font-bold text-red mb-6">
          {t.historia.howItStarted.title}
        </h2>
        <p class="font-mono text-sm md:text-base text-black/80 leading-relaxed">
          {t.historia.howItStarted.text}
        </p>
      </div>

      <!-- Why S'Agar√≥ -->
      <div class="mb-16">
        <h2 class="font-typewriter text-2xl md:text-3xl font-bold text-red mb-6">
          {t.historia.whySagaro.title}
        </h2>
        <p class="font-mono text-sm md:text-base text-black/80 leading-relaxed">
          {t.historia.whySagaro.text}
        </p>
      </div>

      <!-- Philosophy -->
      <div class="mb-16">
        <h2 class="font-typewriter text-2xl md:text-3xl font-bold text-red mb-6">
          {t.historia.philosophy.title}
        </h2>
        <p class="font-mono text-sm md:text-base text-black/80 leading-relaxed">
          {t.historia.philosophy.text}
        </p>
      </div>

      <!-- The Name -->
      <div class="mb-16">
        <h2 class="font-typewriter text-2xl md:text-3xl font-bold text-red mb-6">
          {t.historia.theName.title}
        </h2>
        <p class="font-mono text-sm md:text-base text-black/80 leading-relaxed">
          {t.historia.theName.text}
        </p>
      </div>

    </div>
  </section>

  <!-- Pillars Section -->
  <section class="py-12 md:py-16 bg-cream">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-3 gap-8 md:gap-12">
        
        <!-- Care -->
        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-6 bg-red rounded-full flex items-center justify-center">
            <span class="text-cream text-2xl">‚ù§Ô∏è</span>
          </div>
          <h3 class="font-typewriter text-xl md:text-2xl font-bold text-red mb-4">
            {t.historia.pillars.care.title}
          </h3>
          <p class="font-mono text-sm text-black/70 leading-relaxed">
            {t.historia.pillars.care.text}
          </p>
        </div>

        <!-- Connection -->
        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-6 bg-red rounded-full flex items-center justify-center">
            <span class="text-cream text-2xl">ü§ù</span>
          </div>
          <h3 class="font-typewriter text-xl md:text-2xl font-bold text-red mb-4">
            {t.historia.pillars.connection.title}
          </h3>
          <p class="font-mono text-sm text-black/70 leading-relaxed">
            {t.historia.pillars.connection.text}
          </p>
        </div>

        <!-- Rhythm -->
        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-6 bg-red rounded-full flex items-center justify-center">
            <span class="text-cream text-2xl">üéµ</span>
          </div>
          <h3 class="font-typewriter text-xl md:text-2xl font-bold text-red mb-4">
            {t.historia.pillars.rhythm.title}
          </h3>
          <p class="font-mono text-sm text-black/70 leading-relaxed">
            {t.historia.pillars.rhythm.text}
          </p>
        </div>

      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-typewriter text-2xl md:text-3xl font-bold text-red mb-12">
        {t.about.whoWeAre}
      </h2>
      <div class="grid md:grid-cols-2 gap-12 max-w-2xl mx-auto">
        <!-- Iwonka -->
        <div class="text-center">
          <div class="w-40 h-40 mx-auto bg-black/10 rounded-full flex items-center justify-center font-mono text-sm text-black/40 mb-6">
            [FOTO]
          </div>
          <h3 class="font-typewriter text-xl font-bold">Iwonka</h3>
          <p class="font-mono text-sm text-black/70 mt-2">Co-fundadora</p>
        </div>
        <!-- Franc -->
        <div class="text-center">
          <div class="w-40 h-40 mx-auto bg-black/10 rounded-full flex items-center justify-center font-mono text-sm text-black/40 mb-6">
            [FOTO]
          </div>
          <h3 class="font-typewriter text-xl font-bold">Franc</h3>
          <p class="font-mono text-sm text-black/70 mt-2">Co-fundador</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
