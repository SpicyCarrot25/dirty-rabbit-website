---
import Layout from '../layouts/Layout.astro';
import { getTranslations } from '../i18n';
import menuData from '../data/menu.json';

const lang = 'es';
const t = getTranslations(lang);

// Reorganized sections per Franc's instructions:
// Coffee & Cia = coffee + matcha + chai
// Bebidas = smoothies first, then other drinks (no matcha/chai)
// Food = brunch + tostas + pastries

const teaItems = menuData.drinks.filter(d => 
  d.name.toLowerCase().includes('matcha') || 
  d.name.toLowerCase().includes('chai')
);
const coffeeAndTea = [...menuData.coffee, ...teaItems];

const otherDrinks = menuData.drinks.filter(d => 
  !d.name.toLowerCase().includes('matcha') && 
  !d.name.toLowerCase().includes('chai')
);
// Put smoothies first
const bebidas = [
  ...otherDrinks.filter(d => d.name.toLowerCase().includes('smoothie')),
  ...otherDrinks.filter(d => !d.name.toLowerCase().includes('smoothie'))
];

const food = [...menuData.brunch, ...menuData.tostas, ...menuData.pastries];
---

<Layout title="Carta — Dirty Rabbit" lang={lang}>
  <!-- Hero Section - Clean -->
  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="font-typewriter text-5xl md:text-7xl font-bold mb-4">Carta</h1>
      <div class="w-24 h-px bg-red mx-auto"></div>
    </div>
  </section>

  <!-- Menu Content -->
  <section class="py-8 md:py-16 bg-cream">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- COFFEE & CIA -->
      <div id="coffee" class="scroll-mt-24">
        <h2 class="font-typewriter text-3xl md:text-4xl font-bold text-red mb-2 text-center">
          Coffee & Cia
        </h2>
        <p class="font-mono text-sm text-black/70 text-center mb-8">
          La Cabra blend · V60 con orígenes rotativos · Matcha REQ · Chai Awachai
        </p>
        
        <div class="space-y-5">
          {coffeeAndTea.map((item) => (
            <div class="flex items-baseline justify-between gap-4 group">
              <div class="flex-1 min-w-0">
                <h3 class="font-typewriter text-lg md:text-xl font-bold group-hover:text-red transition-colors">
                  {item.name}
                </h3>
                <p class="font-mono text-sm text-black/70 mt-1">
                  {(item.desc as any)[lang]}
                </p>
              </div>
              <span class="font-typewriter text-xl md:text-2xl font-bold text-red tabular-nums shrink-0">
                {item.price}
              </span>
            </div>
          ))}
        </div>
        
        <!-- Milk alternatives - right after Coffee & Cia -->
        <p class="font-mono text-sm text-black/70 text-center mt-8 pt-4 border-t border-black/10">
          Leche de avena, soja o almendra: +0.50€
        </p>
      </div>

      <!-- BEBIDAS -->
      <div id="bebidas" class="scroll-mt-24 mt-16 pt-16 border-t border-red">
        <h2 class="font-typewriter text-3xl md:text-4xl font-bold text-red mb-2 text-center">
          Bebidas
        </h2>
        <p class="font-mono text-sm text-black/70 text-center mb-8">
          Smoothies · Zumos naturales · Kombucha
        </p>
        
        <div class="space-y-5">
          {bebidas.map((item) => (
            <div class="flex items-baseline justify-between gap-4 group">
              <div class="flex-1 min-w-0">
                <h3 class="font-typewriter text-lg md:text-xl font-bold group-hover:text-red transition-colors">
                  {item.name}
                </h3>
                <p class="font-mono text-sm text-black/70 mt-1">
                  {(item.desc as any)[lang]}
                </p>
              </div>
              <span class="font-typewriter text-xl md:text-2xl font-bold text-red tabular-nums shrink-0">
                {item.price}
              </span>
            </div>
          ))}
        </div>
      </div>

      <!-- FOOD -->
      <div id="food" class="scroll-mt-24 mt-16 pt-16 border-t border-red">
        <h2 class="font-typewriter text-3xl md:text-4xl font-bold text-red mb-2 text-center">
          Food
        </h2>
        <p class="font-mono text-sm text-black/70 text-center mb-8">
          Huevos de Bioma · Pan de masa madre · Bollería de La Puntual
        </p>
        
        <div class="space-y-5">
          {food.map((item) => (
            <div class="flex items-baseline justify-between gap-4 group">
              <div class="flex-1 min-w-0">
                <h3 class="font-typewriter text-lg md:text-xl font-bold group-hover:text-red transition-colors">
                  {item.name}
                </h3>
                <p class="font-mono text-sm text-black/70 mt-1">
                  {(item.desc as any)[lang]}
                </p>
              </div>
              <span class="font-typewriter text-xl md:text-2xl font-bold text-red tabular-nums shrink-0">
                {item.price}
              </span>
            </div>
          ))}
        </div>
      </div>

      <!-- Allergens note -->
      <div class="mt-16 pt-8 border-t border-black/10">
        <p class="font-mono text-sm text-black/70 text-center">
          Pregunta por alérgenos — la cocina no está 100% libre de gluten
        </p>
      </div>

    </div>
  </section>

  <!-- Sticky Bottom Navigation - Simona style -->
  <nav class="fixed bottom-0 left-0 right-0 bg-cream border-t border-black/20 py-4 z-50 md:hidden">
    <div class="flex justify-center items-center">
      <a href="#coffee" class="flex-1 text-center font-typewriter text-sm font-bold text-black uppercase tracking-wide border-r border-black/20">
        Coffee
      </a>
      <a href="#bebidas" class="flex-1 text-center font-typewriter text-sm font-bold text-black uppercase tracking-wide border-r border-black/20">
        Bebidas
      </a>
      <a href="#food" class="flex-1 text-center font-typewriter text-sm font-bold text-black uppercase tracking-wide">
        Food
      </a>
    </div>
  </nav>

  <!-- Bottom padding for sticky nav on mobile -->
  <div class="h-16 md:hidden"></div>
</Layout>

<style>
  .tabular-nums {
    font-variant-numeric: tabular-nums;
  }
  
  html {
    scroll-behavior: smooth;
  }
</style>
