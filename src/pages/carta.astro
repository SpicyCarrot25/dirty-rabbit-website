---
import Layout from '../layouts/Layout.astro';
import { getTranslations } from '../i18n';
import menuData from '../data/menu.json';

const lang = 'es';
const t = getTranslations(lang);

// Reorganized sections per Franc's instructions:
// Coffee & Cia = coffee + matcha + chai
// Bebidas = smoothies first, then other drinks (no matcha/chai)
// Food = brunch + tostas + pastries

const teaItems = menuData.drinks.filter(d => 
  d.name.toLowerCase().includes('matcha') || 
  d.name.toLowerCase().includes('chai')
);
const coffeeAndTea = [...menuData.coffee, ...teaItems];

const otherDrinks = menuData.drinks.filter(d => 
  !d.name.toLowerCase().includes('matcha') && 
  !d.name.toLowerCase().includes('chai')
);
// Put smoothies first
const bebidas = [
  ...otherDrinks.filter(d => d.name.toLowerCase().includes('smoothie')),
  ...otherDrinks.filter(d => !d.name.toLowerCase().includes('smoothie'))
];

const food = [...menuData.brunch, ...menuData.tostas, ...menuData.pastries];
---

<Layout title="Carta — Dirty Rabbit" lang={lang}>
  <!-- Hero Section -->
  <section class="pt-8 pb-12 md:pt-12 md:pb-16 bg-cream">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="font-typewriter text-5xl md:text-6xl font-bold mb-6">Carta</h1>
      <div class="w-16 h-px bg-red mx-auto mb-8"></div>
      
      <!-- Intro paragraph -->
      <p class="font-mono text-sm md:text-base text-black/80 leading-relaxed max-w-xl mx-auto">
        Curamos todo lo que servimos. Productos locales y orgánicos de nuestros vecinos, 
        y también tesoros que amamos de fuera — café de Copenhague, mantequilla de Bélgica, 
        matcha de Kioto. Este es nuestro hogar, y queremos compartirlo contigo.
      </p>
    </div>
  </section>

  <!-- Menu Content -->
  <section class="py-8 md:py-12 bg-cream">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- CAFÉ & CIA -->
      <div id="coffee" class="scroll-mt-20">
        <h2 class="font-typewriter text-4xl md:text-5xl font-bold text-red mb-2 text-center">
          Café & Cia
        </h2>
        <p class="font-mono text-sm text-black/70 text-center mb-8">
          La Cabra blend · V60 con orígenes rotativos · Matcha REQ · Chai Awachai
        </p>
        
        <div class="space-y-5">
          {coffeeAndTea.map((item) => (
            <div class="flex items-baseline justify-between gap-4 group">
              <div class="flex-1 min-w-0">
                <h3 class="font-typewriter text-lg md:text-xl font-bold group-hover:text-red transition-colors">
                  {item.name}
                </h3>
                <p class="font-mono text-sm text-black/70 mt-1">
                  {(item.desc as any)[lang]}
                </p>
              </div>
              <span class="font-typewriter text-xl md:text-2xl font-bold text-red tabular-nums shrink-0">
                {item.price}
              </span>
            </div>
          ))}
        </div>
        
        <!-- Milk alternatives -->
        <p class="font-mono text-sm text-black/70 text-center mt-8 pt-4 border-t border-black/10">
          Leche de avena, soja o almendra: +0.50€
        </p>
      </div>

      <!-- BEBIDAS -->
      <div id="bebidas" class="scroll-mt-20 mt-16 pt-16 border-t border-red">
        <h2 class="font-typewriter text-4xl md:text-5xl font-bold text-red mb-2 text-center">
          Bebidas
        </h2>
        <p class="font-mono text-sm text-black/70 text-center mb-8">
          Smoothies · Zumos naturales · Kombucha
        </p>
        
        <div class="space-y-5">
          {bebidas.map((item) => (
            <div class="flex items-baseline justify-between gap-4 group">
              <div class="flex-1 min-w-0">
                <h3 class="font-typewriter text-lg md:text-xl font-bold group-hover:text-red transition-colors">
                  {item.name}
                </h3>
                <p class="font-mono text-sm text-black/70 mt-1">
                  {(item.desc as any)[lang]}
                </p>
              </div>
              <span class="font-typewriter text-xl md:text-2xl font-bold text-red tabular-nums shrink-0">
                {item.price}
              </span>
            </div>
          ))}
        </div>
      </div>

      <!-- COMIDA -->
      <div id="food" class="scroll-mt-20 mt-16 pt-16 border-t border-red">
        <h2 class="font-typewriter text-4xl md:text-5xl font-bold text-red mb-2 text-center">
          Comida
        </h2>
        <p class="font-mono text-sm text-black/70 text-center mb-8">
          Huevos de Bioma · Pan de masa madre · Bollería de La Puntual
        </p>
        
        <div class="space-y-5">
          {food.map((item) => (
            <div class="flex items-baseline justify-between gap-4 group">
              <div class="flex-1 min-w-0">
                <h3 class="font-typewriter text-lg md:text-xl font-bold group-hover:text-red transition-colors">
                  {item.name}
                </h3>
                <p class="font-mono text-sm text-black/70 mt-1">
                  {(item.desc as any)[lang]}
                </p>
              </div>
              <span class="font-typewriter text-xl md:text-2xl font-bold text-red tabular-nums shrink-0">
                {item.price}
              </span>
            </div>
          ))}
        </div>
      </div>

      <!-- Allergens note -->
      <div class="mt-16 pt-8 border-t border-black/10">
        <p class="font-mono text-sm text-black/70 text-center">
          Pregunta por alérgenos — la cocina no está 100% libre de gluten
        </p>
      </div>
    </div>
  </section>

  <!-- Sticky Bottom Navigation -->
  <nav class="fixed bottom-0 left-0 right-0 bg-cream border-t border-red py-6 z-50 md:hidden safe-area-bottom">
    <div class="flex justify-center items-center">
      <a href="#coffee" class="flex-1 text-center font-typewriter text-xl font-bold text-red border-r border-red py-1">
        Café & Cia
      </a>
      <a href="#bebidas" class="flex-1 text-center font-typewriter text-xl font-bold text-red border-r border-red py-1">
        Bebidas
      </a>
      <a href="#food" class="flex-1 text-center font-typewriter text-xl font-bold text-red py-1">
        Comida
      </a>
    </div>
  </nav>

  <!-- Bottom padding for sticky nav on mobile -->
  <div class="h-20 md:hidden"></div>
</Layout>

<style>
  .tabular-nums {
    font-variant-numeric: tabular-nums;
  }
  
  html {
    scroll-behavior: smooth;
  }
  
  .safe-area-bottom {
    padding-bottom: max(1.25rem, env(safe-area-inset-bottom));
  }
</style>
