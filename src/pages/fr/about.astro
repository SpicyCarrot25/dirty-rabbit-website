---
import Layout from '../../layouts/Layout.astro';
import { getTranslations, getLocalizedPath } from '../../i18n';

const lang = 'fr';
const t = getTranslations(lang);

const iwonkaSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "@id": "https://dirtyrabbit.es/#iwonka",
  "name": "Iwonka",
  "jobTitle": "Fondatrice & Barista",
  "worksFor": {
    "@type": "Organization",
    "@id": "https://dirtyrabbit.es/#business"
  },
  "description": "Fondatrice de Dirty Rabbit, passionnée de café de spécialité et d'hospitalité"
};
---

<Layout 
  title={`${t.historia.title} — Dirty Rabbit`} 
  description="Découvrez Iwonka, fondatrice de Dirty Rabbit: café de spécialité et brunch à S'Agaró, Costa Brava."
  lang={lang}>
  
  <script type="application/ld+json" set:html={JSON.stringify(iwonkaSchema)} slot="head" />
  
  <section class="pt-8 pb-12 md:pt-12 md:pb-16 bg-cream">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="font-typewriter text-5xl md:text-6xl font-bold text-red mb-6">Nous, à Notre Façon</h1>
      <div class="w-16 h-px bg-red mx-auto mb-8"></div>
      <p class="font-mono text-lg md:text-xl text-black/70 italic">
        {t.historia.tagline}
      </p>
    </div>
  </section>

  <section class="bg-cream pb-12">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <img 
        src="/images/heroes/iwonka-coffee.jpg" 
        alt="dirty-rabbit-iwonka-specialty-coffee-sagaro" 
        class="w-full aspect-[4/3] object-cover object-top rounded-lg"
        loading="eager"
      />
    </div>
  </section>

  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-16">
        <h2 class="font-typewriter text-2xl md:text-3xl font-bold text-red mb-6">{t.historia.howItStarted.title}</h2>
        <p class="font-mono text-sm md:text-base text-black/80 leading-relaxed">{t.historia.howItStarted.text}</p>
      </div>
      <div class="mb-16">
        <h2 class="font-typewriter text-2xl md:text-3xl font-bold text-red mb-6">{t.historia.whySagaro.title}</h2>
        <p class="font-mono text-sm md:text-base text-black/80 leading-relaxed">{t.historia.whySagaro.text}</p>
      </div>
      <div class="mb-16">
        <h2 class="font-typewriter text-2xl md:text-3xl font-bold text-red mb-6">{t.historia.philosophy.title}</h2>
        <p class="font-mono text-sm md:text-base text-black/80 leading-relaxed">{t.historia.philosophy.text}</p>
      </div>
      <div class="mb-16">
        <h2 class="font-typewriter text-2xl md:text-3xl font-bold text-red mb-6">{t.historia.theName.title}</h2>
        <p class="font-mono text-sm md:text-base text-black/80 leading-relaxed">{t.historia.theName.text}</p>
      </div>
    </div>
  </section>

  <section class="py-16 md:py-24 bg-black text-cream">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <p class="font-mono text-sm tracking-widest text-cream/60 mb-4">Ce Que Nous Croyons</p>
        <div class="w-12 h-px bg-red mx-auto"></div>
      </div>
      <div class="space-y-16">
        <div class="border-l-2 border-red pl-8">
          <h3 class="font-typewriter text-3xl md:text-4xl font-bold mb-4">{t.historia.pillars.wildComfort.title}</h3>
          <p class="font-mono text-base md:text-lg text-cream/80 leading-relaxed max-w-2xl">{t.historia.pillars.wildComfort.text}</p>
        </div>
        <div class="border-l-2 border-red pl-8">
          <h3 class="font-typewriter text-3xl md:text-4xl font-bold mb-4">{t.historia.pillars.belonging.title}</h3>
          <p class="font-mono text-base md:text-lg text-cream/80 leading-relaxed max-w-2xl">{t.historia.pillars.belonging.text}</p>
        </div>
        <div class="border-l-2 border-red pl-8">
          <h3 class="font-typewriter text-3xl md:text-4xl font-bold mb-4">{t.historia.pillars.intentional.title}</h3>
          <p class="font-mono text-base md:text-lg text-cream/80 leading-relaxed max-w-2xl">{t.historia.pillars.intentional.text}</p>
        </div>
      </div>
      <div class="mt-16 pt-12 border-t border-cream/20 text-center">
        <p class="font-typewriter text-xl md:text-2xl text-cream/90 italic">"Où le café a un goût de quelque chose de plus."</p>
      </div>
    </div>
  </section>

  <section class="py-16 md:py-24 bg-cream">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-typewriter text-3xl md:text-4xl font-bold text-red mb-6">{t.historia.cta?.title || "Vous venez pour le petit-déjeuner ?"}</h2>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href={getLocalizedPath('/carta', lang)} class="inline-block font-typewriter text-lg px-8 py-3 border-2 border-red text-red hover:bg-red hover:text-white transition-colors rounded-lg">
          {t.historia.cta?.carta || "Voir la Carte"}
        </a>
        <a href="https://maps.google.com/?q=Dirty+Rabbit+S'Agaró" target="_blank" rel="noopener noreferrer" class="inline-block font-typewriter text-lg px-8 py-3 bg-red text-white hover:bg-red/90 transition-colors rounded-lg">
          {t.historia.cta?.visit || "Comment Venir"}
        </a>
      </div>
    </div>
  </section>

</Layout>
