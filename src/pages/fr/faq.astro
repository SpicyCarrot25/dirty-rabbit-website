---
import Layout from '../../layouts/Layout.astro';
import { getTranslations } from '../../i18n';

const lang = 'fr';
const t = getTranslations(lang);
---

<Layout 
  title={`${t.faq.title} — Dirty Rabbit`}
  description="Questions fréquentes sur Dirty Rabbit S'Agaró. Horaires, réservations, chiens, parking, options véganes et tout ce que vous devez savoir."
  lang={lang}>
  
  <!-- Hero Section -->
  <section class="pt-8 pb-12 md:pt-12 md:pb-16 bg-cream">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="font-typewriter text-5xl md:text-6xl font-bold text-red mb-6">{t.faq.title}</h1>
      <div class="w-16 h-px bg-red mx-auto mb-8"></div>
      <p class="font-mono text-sm md:text-base text-black/70">
        {t.faq.intro}
      </p>
    </div>
  </section>

  <!-- FAQ Sections -->
  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- General -->
      <div class="mb-12">
        <h2 class="font-typewriter text-2xl font-bold text-red mb-6">{t.faq.categories.general}</h2>
        <div class="space-y-4">
          <details class="group border-b border-black/10 pb-4">
            <summary class="flex justify-between items-center cursor-pointer font-typewriter text-base font-bold">
              {t.contact.questions.reservation}
              <svg class="w-5 h-5 text-red group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </summary>
            <p class="mt-3 font-mono text-sm text-black/70">{t.contact.questions.reservationAnswer}</p>
