---
import Layout from '../../layouts/Layout.astro';
import { getTranslations } from '../../i18n';
import menuData from '../../data/menu.json';

const lang = 'en';
const t = getTranslations(lang);

const teaItems = menuData.drinks.filter(d => 
  d.name.toLowerCase().includes('matcha') || 
  d.name.toLowerCase().includes('chai')
);
const coffeeAndTea = [...menuData.coffee, ...teaItems];

const otherDrinks = menuData.drinks.filter(d => 
  !d.name.toLowerCase().includes('matcha') && 
  !d.name.toLowerCase().includes('chai')
);
const bebidas = [
  ...otherDrinks.filter(d => d.name.toLowerCase().includes('smoothie')),
  ...otherDrinks.filter(d => !d.name.toLowerCase().includes('smoothie'))
];

const food = [...menuData.brunch, ...menuData.tostas, ...menuData.pastries];
---

<Layout title="Menu — Dirty Rabbit" lang={lang}>
  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="font-typewriter text-5xl md:text-7xl font-bold mb-4">Menu</h1>
      <div class="w-24 h-px bg-red mx-auto"></div>
    </div>
  </section>

  <section class="py-8 md:py-16 bg-cream">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <div id="coffee" class="scroll-mt-24">
        <h2 class="font-typewriter text-3xl md:text-4xl font-bold text-red mb-2 text-center">Coffee & Cia</h2>
        <p class="font-mono text-sm text-black/70 text-center mb-8">La Cabra blend · V60 rotating origins · REQ Matcha · Awachai Chai</p>
        <div class="space-y-5">
          {coffeeAndTea.map((item) => (
            <div class="flex items-baseline justify-between gap-4 group">
              <div class="flex-1 min-w-0">
                <h3 class="font-typewriter text-lg md:text-xl font-bold group-hover:text-red transition-colors">{item.name}</h3>
                <p class="font-mono text-sm text-black/70 mt-1">{(item.desc as any)[lang]}</p>
              </div>
              <span class="font-typewriter text-xl md:text-2xl font-bold text-red tabular-nums shrink-0">{item.price}</span>
            </div>
          ))}
        </div>
        <p class="font-mono text-sm text-black/70 text-center mt-8 pt-4 border-t border-black/10">Oat, soy or almond milk: +€0.50</p>
      </div>

      <div id="bebidas" class="scroll-mt-24 mt-16 pt-16 border-t border-red">
        <h2 class="font-typewriter text-3xl md:text-4xl font-bold text-red mb-2 text-center">Drinks</h2>
        <p class="font-mono text-sm text-black/70 text-center mb-8">Smoothies · Fresh juices · Kombucha</p>
        <div class="space-y-5">
          {bebidas.map((item) => (
            <div class="flex items-baseline justify-between gap-4 group">
              <div class="flex-1 min-w-0">
                <h3 class="font-typewriter text-lg md:text-xl font-bold group-hover:text-red transition-colors">{item.name}</h3>
                <p class="font-mono text-sm text-black/70 mt-1">{(item.desc as any)[lang]}</p>
              </div>
              <span class="font-typewriter text-xl md:text-2xl font-bold text-red tabular-nums shrink-0">{item.price}</span>
            </div>
          ))}
        </div>
      </div>

      <div id="food" class="scroll-mt-24 mt-16 pt-16 border-t border-red">
        <h2 class="font-typewriter text-3xl md:text-4xl font-bold text-red mb-2 text-center">Food</h2>
        <p class="font-mono text-sm text-black/70 text-center mb-8">Bioma eggs · Sourdough bread · La Puntual pastries</p>
        <div class="space-y-5">
          {food.map((item) => (
            <div class="flex items-baseline justify-between gap-4 group">
              <div class="flex-1 min-w-0">
                <h3 class="font-typewriter text-lg md:text-xl font-bold group-hover:text-red transition-colors">{item.name}</h3>
                <p class="font-mono text-sm text-black/70 mt-1">{(item.desc as any)[lang]}</p>
              </div>
              <span class="font-typewriter text-xl md:text-2xl font-bold text-red tabular-nums shrink-0">{item.price}</span>
            </div>
          ))}
        </div>
      </div>

      <div class="mt-16 pt-8 border-t border-black/10">
        <p class="font-mono text-sm text-black/70 text-center">Ask about allergens — kitchen is not 100% gluten-free</p>
      </div>

    </div>
  </section>

  <nav class="fixed bottom-0 left-0 right-0 bg-cream border-t border-black/20 py-4 z-50 md:hidden">
    <div class="flex justify-center items-center">
      <a href="#coffee" class="flex-1 text-center font-typewriter text-sm font-bold text-black uppercase tracking-wide border-r border-black/20">Coffee</a>
      <a href="#bebidas" class="flex-1 text-center font-typewriter text-sm font-bold text-black uppercase tracking-wide border-r border-black/20">Drinks</a>
      <a href="#food" class="flex-1 text-center font-typewriter text-sm font-bold text-black uppercase tracking-wide">Food</a>
    </div>
  </nav>
  <div class="h-16 md:hidden"></div>
</Layout>

<style>
  .tabular-nums { font-variant-numeric: tabular-nums; }
  html { scroll-behavior: smooth; }
</style>
